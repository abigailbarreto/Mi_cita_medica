<%= render "partials/navigation"%>
<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Motivo</th>
      <th>Estado de la cita</th>
      <th>Medico</th>
      <th>Especialidad</th>
      <th>Paciente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.meet_date %></td>
        <td><%= appointment.meet_time %></td>
        <td><%= appointment.meet_motive %></td>
        <td><%= appointment.meet_state %></td>
        <td><%= appointment.medico.name %></td>
        <td><%= appointment.medico.specialty %></td>
        <td><%= appointment.user.id %></td>
        <td><%= link_to 'VER', appointment %></td>
        <td><%= link_to 'EDITAR', edit_appointment_path(appointment) %></td>
        <td><%= button_to 'CANCELAR', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Atras', root_path %>
